  <style>
       .section-follow .fa-3x{
          margin: 5px 10px;
        }
        #book{
            margin-left: 10em;
            font-size: 1em;
            border: 1px solid black;
        }
        .plus{
            position: absolute;
            font-size: 3em;
            cursor: pointer;
            margin-top: 9px;
            left: 29em;
        }
        @media (max-width: 1300px){
            #book{
                margin-left: 0;
                margin-right: 0;
                font-size: 1.5em;
            }
        }
        #tog{

            margin-top: 0;
        }
        .cupa{
            border-top: 2px solid black;
            margin-bottom: -1em;
        }
        #arrow{
            position: absolute;
            margin-top: -15em;
            margin-left: 50em;
            cursor: pointer;
        }
            ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-track {
            background: #f1f1f1; 
        }
        
        ::-webkit-scrollbar-thumb {
            background: grey; 
        }

        ::-webkit-scrollbar-thumb:hover {
            background: #555; 
        }
  </style>
  <script>
        $(document).ready(function(){
            $('#tog').hide();
            $('.plus').click(function(){
                $('#tog').slideToggle(500);
            });
            $('.form-submit').on('submit', function(e){
            e.preventDefault();
            $.ajax({
                type: 'POST',
                url: 'send',
                data: {
                    name: $("#Name").val(),
                    email: $("#Email").val(),
                    phone: $("#Phone").val(),
                    message: $("#Message").val()
                },
                success: (response) => {
                    alert('Message has been sent'),
                    window.location.href = '/';
                },
                error: (error) => {
                    console.log(error);
                }
            });
        });
    });
        function fun(){
            JSAlert.alert("You are not logged in");
        }
  </script>
      
