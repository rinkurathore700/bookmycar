<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="main.css"> 
    <!--Jquery-->
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.3.1.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->  
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-rc.2/css/materialize.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-rc.2/js/materialize.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ" crossorigin="anonymous">
    <!--Import_fontawesome_icons-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ" crossorigin="anonymous">
    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Bookmytrip</title>
    <link rel="icon" href="Images/title.png" type="image/png">
    <style>
      #bmc{
            position: absolute;
            left: 4em;
        }
            #logn{
                     background-image: url(Images/paxel1.jpg);
                     background-position: center;
                     background-size: cover;
                     padding-top: .5em;
                     padding-bottom: 4em;
                 }
             #lognr{
                     width: 60%;
                   }
            @media (max-width: 1100px) and (min-width: 700px){
                #lognr{
                    width: 80%;
                }
            }
            @media (max-width: 700px){
                #lognr{
                    width: 95%;
                }
            }
        </style>
  </head>
<body>    

   <!--Navbar-->
    <div class="hoverable navbar-fixed">
        <nav class="teal">
            <div class="container-fluid">
                <div class="center nav-wrapper">
                    <ul class="center" >
                        <li id="logo">
                              <img height="60px" width="60px" src="Images/trip.png" alt="Logo"> 
                        </li>
                        <li>
                            <a href="/"> <h5 id="bmc"><span class="black-text">Book</span>MyCar</h5></a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
      </div>
     <!--signup-->
     <div id="logn" class="container-fluid">
            <div id="lognr" class="row">
                    <h1 class=" teal-text  center">Sign Up</h1><br><br>
                    {{#if errors}}
                        {{#each errors}}
                           <div class="card-panel red  lighten-2">{{msg}}</div>
                        {{/each}}
                    {{/if}}
                    {{#if error_msg}}
                      <div class="card-panel red  lighten-2">{{error_msg}}</div>
                    {{/if}}
                <form method="POST" action="/signup" class="col s12">
                  <div class="row">
                  </div>
                  <div class="row">
                    <div class="input-field col s12">
                     <input id="email" type="text" autofocus class="validate" name="Name" required>
                      <label for="text">Enter your Name</label>
                    </div>
                  </div>
                   <div class="row">
                    <div class="input-field col s12">
                     <input id="email" type="email" autofocus class="validate" name="email" required>
                      <label for="email">Enter your Email</label>
                    </div>
                  </div>
                  <div class="row">
                    <div class="input-field col s12">
                      <input id="password" type="password" autofocus class="validate" name="password" required>
                      <label for="password">Password</label>
                    </div>
                  </div>
                  <div class="row">
                    <div class="input-field col s12">
                      <input id="password1" type="password" autofocus class="validate" name="password1" required>
                      <label for="password">Repeat Password</label>
                    </div>
                  </div>
                  <p>
                    <label>
                      <input onclick="changer()" type="checkbox" />
                      <span class="black-text">Show Password</span>
                    </label>
                  </p><br><br>
                 <button class="btn">submit
                        <i class="material-icons right">send</i>
                 </button>
                 <h5 class="right">Already have an account.</h5>
                 <br><br>
                </form>
                <a class="btn red right white-text" href="/login/{{tok}}">log in<i class="material-icons right">send</i></a>
              </div>        
        </div>
        <script>
          function changer(){
            var x = document.getElementById('password');
            var y = document.getElementById('password1');
            if(x.type === "password"){
              x.type = "text";
            }
            else{
              x.type = "password";
            }

            if(y.type === "password"){
              y.type = "text";
            }
            else{
              y.type = "password";
            }
          }
        </script>
</body>
</html>